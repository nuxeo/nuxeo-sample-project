<project name="nuxeo-assembly"
         default="build"
         xmlns:nx="urn:nuxeo-build"
         xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
           uri="urn:nuxeo-artifact" />

  <target name="build" description="Build Nuxeo sample Marketplace package">
    <tstamp />
    <delete failonerror="false"
            dir="${maven.project.build.directory}/marketplace" />
    <mkdir dir="${maven.project.build.directory}/marketplace" />
    <copy todir="${maven.project.build.directory}/marketplace">
      <fileset dir="src/main/resources" />
      <filterset>
        <filter token="VERSION" value="${marketplace.sample.version}" />
        <filter token="DISTRIB_VERSION" value="${nuxeo.distribution.version}" />
      </filterset>
    </copy>
    <copy todir="${maven.project.build.directory}">
      <!-- Base distribution EAR -->
      <artifact:resolveFile key="org.nuxeo.ecm.distribution:nuxeo-distribution-cap::zip" />
      <!-- Your custom EAR -->
      <artifact:resolveFile key="org.nuxeo.marketplace.sample:ear::zip" />
    </copy>
    <!-- Your MP only needs to include files not already provided by the base distribution -->
    <nx:zipdiff file1="${maven.project.build.directory}/ear-${marketplace.sample.version}.zip"
                file2="${maven.project.build.directory}/nuxeo-distribution-cap-${nuxeo.distribution.version}.zip"
                includesfile="${maven.project.build.directory}/includes"
                excludesfile="${maven.project.build.directory}/excludesfile"
                patternsetid="sample.versus.cap">
    </nx:zipdiff>
    <unzip src="${maven.project.build.directory}/ear-${marketplace.sample.version}.zip"
           dest="${maven.project.build.directory}/marketplace/install">
      <patternset refid="sample.versus.cap" />
    </unzip>

    <!-- Optional: use it if you need your MP to deploy a dedicated template -->
    <unzip dest="${maven.project.build.directory}/marketplace/install/templates"
           overwrite="true">
      <artifact:resolveFile key="org.nuxeo.marketplace.sample:ear:${marketplace.sample.version}:zip"
                            classifier="resources" />
    </unzip>

    <zip destfile="${maven.project.build.directory}/${maven.project.artifactId}-${marketplace.sample.version}.zip"
         basedir="${maven.project.build.directory}/marketplace" />
    <artifact:attach file="${maven.project.build.directory}/${maven.project.artifactId}-${marketplace.sample.version}.zip"
                     target="${maven.project.groupId}:${maven.project.artifactId}"
                     type="zip" />
  </target>

</project>
