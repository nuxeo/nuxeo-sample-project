<?xml version="1.0"?>
<component name="org.nuxeo.project.sample.dashborad.gagdet">

	<extension target="org.nuxeo.opensocial.gadgets.service"
		point="gadget">

		<!--
			Add the isbn gadget to the Nuxeo category. This gadget is defined in
			src/main/resources/gadget/isbn/isbn.xml
		-->
		<internalGadget name="isbn">
			<mountPoint>/isbn/isbn</mountPoint>
			<directory>isbn-gadget</directory>
			<category>Nuxeo</category>
			<icon>isbn_icon.png</icon>
		</internalGadget>

	</extension>

</component>
